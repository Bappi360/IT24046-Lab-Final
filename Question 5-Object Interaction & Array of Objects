class Book {
    private int bookId;
    private String title;
    private double price;

    public Book(int bookId, String title, double price) {
        this.bookId = bookId;
        this.title = title;
        this.price = price;
    }

    public double getPrice() {
        return price;
    }

    public void display() {
        System.out.println("Book ID: " + bookId + ", Title: " + title + ", Price: " + price);
    }
}

public class Main {
    public static void main(String[] args) {
        Book[] books = new Book[5];
        books[0] = new Book(101, "Java Basics", 450);
        books[1] = new Book(102, "Data Structures", 550);
        books[2] = new Book(103, "Algorithms", 600);
        books[3] = new Book(104, "Database Systems", 480);
        books[4] = new Book(105, "Operating Systems", 700);

        double totalPrice = 0;
        System.out.println("Books with price greater than 500:");
        for (Book b : books) {
            totalPrice += b.getPrice();
            if (b.getPrice() > 500) {
                b.display();
            }
        }

        double averagePrice = totalPrice / books.length;
        System.out.println("Average price of all books: " + averagePrice);
    }
}
